import java.util.Scanner; // импорт библиотеки утил и класса сканер


public class HumanitarianAid {
    public static void main(String[] args) { // производим запуск программы
        int container = 1; // объявляем целочисленную переменную и присваиваем значение
        int truck = 1; // объявляем целочисленную переменную и присваиваем значение
        Scanner scanner = new Scanner(System.in); //создаем новый объект класса сканер для получения инфы из консоли
        System.out.println("How many boxes do you have?"); // печатаем в консоль строчку
        int box = scanner.nextInt(); // присваиваем значение целочисленной переменной полученое из консоли
        System.out.println("Грузовик: " + truck); // печатаем номер грузовика присвоенный ранее
        System.out.println("\tКонтейнер: " + container); // печатаем номер контейнера, \t - символ табуляции
        for (int i = 1; i <= box; i++) { // запускаем цикл который будет выполняться пока действует условие: если i меньше или равно значению переменной box ; увеличиваем i на 1
            System.out.println("\t\tЯщик: " + i); // печатаем в консоль номер ящика который по совместительству переменная цикла фор
            if (i % (12 * 27) == 0) { // здесь мы проверяем условие если остаток от деления i на полученное произведение количества контейнеров в грузовике на количество ящиков в контейнете  будет равно 0
                truck += 1; // то количество грузовиков будет увеличиваться на 1
                System.out.println("Грузовик: " + truck); // затем печататься строка Грузовик и его порядковый номер
            }
            if (i % 27 == 0) { // опять же проверяем условие пока остаток от деления i на количество ящиков в контейнере равно 0
                container += 1; // значению контейнер будет увиличиваться на 1
                System.out.println("\tКонтейнер: " + container); // после этого будет печататься строка с порядковым номером контейнера
            }

        }
        System.out.println("Необходимо:\nгрузовиков - " + truck + "шт." + "\nконтейнеров - " + container + "шт."); // \n - символ переноса выводимой информации на новую строку, ну и собственно здесь выводится информация о том сколько требуется грузовиков и контейнеров ля перевозки ящиков

    }
}
